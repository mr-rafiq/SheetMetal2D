        <Label Name="unit1" Content="mm" HorizontalAlignment="Left" Margin="326,149,0,0" VerticalAlignment="Top" FontFamily="Leelawadee UI" Foreground="White" FontSize="10" />
        <Label Name="unit2" Content="mm" HorizontalAlignment="Left" Margin="326,182,0,0" VerticalAlignment="Top" FontFamily="Leelawadee UI" Foreground="White" FontSize="10" />
        <ComboBox Name="MaterialThikness_combo" HorizontalAlignment="Left" Margin="201,123,0,0" VerticalAlignment="Top" Width="120"  />
